</head>
<body>
    <nav class="navbar">
        <div class="navbar-brand">üìä Sales Reports & Analytics</div>
        <div class="navbar-actions">
            <a href="/sales/dashboard" class="btn-back">‚Üê Back to Sales Dashboard</a>
        </div>
    </nav>
    
    <div class="container">
        <div class="header-section">
            <h1>üìä Sales Reports & Analytics</h1>
            <p style="color: #666;">Comprehensive sales performance insights</p>
            
            <div class="stats-grid" id="statsGrid">
                <div class="stat-card">
                    <div class="stat-card-icon">üí∞</div>
                    <div class="stat-value" id="totalRevenue">-</div>
                    <div class="stat-label">Total Revenue</div>
                </div>
                <div class="stat-card">
                    <div class="stat-card-icon">üì¶</div>
                    <div class="stat-value" id="totalOrders">-</div>
                    <div class="stat-label">Total Orders</div>
                </div>
                <div class="stat-card">
                    <div class="stat-card-icon">üíµ</div>
                    <div class="stat-value" id="avgOrderValue">-</div>
                    <div class="stat-label">Avg Order Value</div>
                </div>
                <div class="stat-card">
                    <div class="stat-card-icon">üë•</div>
                    <div class="stat-value" id="totalCustomers">-</div>
                    <div class="stat-label">Total Customers</div>
                </div>
                <div class="stat-card">
                    <div class="stat-card-icon">üìà</div>
                    <div class="stat-value" id="growthRate">-</div>
                    <div class="stat-label">Growth Rate</div>
                </div>
            </div>
        </div>
        
        <div class="filters-section">
            <div class="filter-group">
                <div class="filter-item">
                    <label>Report Period</label>
                    <select id="periodFilter">
                        <option value="monthly" selected>Monthly</option>
                        <option value="weekly">Weekly</option>
                        <option value="quarterly">Quarterly</option>
                        <option value="daily">Daily</option>
                    </select>
                </div>
                <div class="filter-item">
                    <label>Number of Periods</label>
                    <input type="number" id="limitFilter" value="12" min="1" max="100">
                </div>
                <div class="filter-item">
                    <label>&nbsp;</label>
                    <button class="btn-filter" onclick="loadReport()">üìä Generate Report</button>
                </div>
            </div>
        </div>
        
        <div class="content-section">
            <h2>üìà Revenue Trend</h2>
            <div id="trendContainer">
                <p class="loading">Loading trend data...</p>
            </div>
        </div>
        
        <div class="content-section">
            <h2>üèÜ Top Performing Products</h2>
            <div id="productsContainer">
                <p class="loading">Loading top products...</p>
            </div>
        </div>
        
        <div class="content-section">
            <h2>üåç Revenue by Country</h2>
            <div id="countriesContainer">
                <p class="loading">Loading countries data...</p>
            </div>
        </div>
    </div>
    
    <script>
        const SALES_API_URL = 'http://localhost:8004';
        
        async function loadReport() {
            const period = document.getElementById('periodFilter').value;
            const limit = document.getElementById('limitFilter').value;
            
            document.getElementById('trendContainer').innerHTML = '<p class="loading">Loading trend data...</p>';
            document.getElementById('productsContainer').innerHTML = '<p class="loading">Loading top products...</p>';
            document.getElementById('countriesContainer').innerHTML = '<p class="loading">Loading countries data...</p>';
            
            try {
                const response = await fetch(`${SALES_API_URL}/reports?period=${period}&limit=${limit}`);
                if (!response.ok) throw new Error('Failed to fetch report');
                
                const data = await response.json();
                
                // Update stats
                document.getElementById('totalRevenue').textContent = '$' + data.report.total_revenue.toLocaleString();
                document.getElementById('totalOrders').textContent = data.report.total_orders.toLocaleString();
                document.getElementById('avgOrderValue').textContent = '$' + data.report.avg_order_value.toLocaleString();
                document.getElementById('totalCustomers').textContent = data.report.total_customers.toLocaleString();
                
                const growthElement = document.getElementById('growthRate');
                const growthValue = data.report.growth_rate;
                growthElement.textContent = (growthValue > 0 ? '+' : '') + growthValue.toFixed(2) + '%';
                growthElement.className = 'stat-value ' + (growthValue >= 0 ? 'growth-positive' : 'growth-negative');
                
                // Render trend
                renderTrend(data.trend);
                
                // Render top products
                renderTopProducts(data.report.top_products);
                
                // Render countries
                renderCountries(data.report.revenue_by_country);
                
            } catch (error) {
                console.error('Error loading report:', error);
                document.getElementById('trendContainer').innerHTML = '<div class="error">Failed to load report. Make sure the Sales API is running on port 8004.</div>';
            }
        }
        
        function renderTrend(trend) {
            if (!trend || trend.length === 0) {
                document.getElementById('trendContainer').innerHTML = '<p class="loading">No trend data available.</p>';
                return;
            }
            
            const maxRevenue = Math.max(...trend.map(t => t.revenue));
            
            let html = '<div class="trend-chart">';
            trend.forEach(item => {
                const barWidth = (item.revenue / maxRevenue * 100).toFixed(2);
                html += `
                    <div class="trend-row">
                        <div class="trend-period">${item.period}</div>
                        <div class="trend-bar-container">
                            <div class="trend-bar" style="width: ${barWidth}%"></div>
                        </div>
                        <div class="trend-value">$${item.revenue.toLocaleString()}</div>
                    </div>
                `;
            });
            html += '</div>';
            
            document.getElementById('trendContainer').innerHTML = html;
        }
        
        function renderTopProducts(products) {
            if (!products || products.length === 0) {
                document.getElementById('productsContainer').innerHTML = '<p class="loading">No products data available.</p>';
                return;
            }
            
            let html = `
                <table>
                    <thead>
                        <tr>
                            <th>Rank</th>
                            <th>Stock Code</th>
                            <th>Description</th>
                            <th>Revenue</th>
                            <th>Quantity Sold</th>
                            <th>Orders</th>
                        </tr>
                    </thead>
                    <tbody>
            `;
            
            products.forEach((product, index) => {
                html += `
                    <tr>
                        <td><strong>#${index + 1}</strong></td>
                        <td><code>${product.stock_code}</code></td>
                        <td>${product.description}</td>
                        <td><strong>$${product.revenue.toLocaleString()}</strong></td>
                        <td>${product.quantity_sold.toLocaleString()}</td>
                        <td>${product.orders.toLocaleString()}</td>
                    </tr>
                `;
            });
            
            html += '</tbody></table>';
            document.getElementById('productsContainer').innerHTML = html;
        }
        
        function renderCountries(countries) {
            if (!countries || countries.length === 0) {
                document.getElementById('countriesContainer').innerHTML = '<p class="loading">No countries data available.</p>';
                return;
            }
            
            let html = `
                <table>
                    <thead>
                        <tr>
                            <th>Rank</th>
                            <th>Country</th>
                            <th>Revenue</th>
                            <th>% of Total</th>
                        </tr>
                    </thead>
                    <tbody>
            `;
            
            const totalRevenue = countries.reduce((sum, c) => sum + c.revenue, 0);
            
            countries.forEach((country, index) => {
                const percentage = (country.revenue / totalRevenue * 100).toFixed(2);
                html += `
                    <tr>
                        <td><strong>#${index + 1}</strong></td>
                        <td>${country.country}</td>
                        <td><strong>$${country.revenue.toLocaleString()}</strong></td>
                        <td>${percentage}%</td>
                    </tr>
                `;
            });
            
            html += '</tbody></table>';
            document.getElementById('countriesContainer').innerHTML = html;
        }
        
        // Load report on page load
        loadReport();
    </script>
</body>
</html>
