        .trend-period {
            min-width: 100px;
            font-weight: 600;
            color: #333;
        }
        
        .trend-bar-container {
            flex: 1;
            background: #f0f0f0;
            border-radius: 6px;
            overflow: hidden;
            height: 30px;
        }
        
        .trend-bar {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
